.box-container {
  margin: 10rpx 0 20rpx 10rpx；
}
.fenlei {
  border-radius: 65rpx;
  background-color: white;
  margin: 20rpx;
  display: inline-block;
}
.image_fenlei {
  display: flex; 
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-content: center;
}
/*轮播图指示点*/
.lunbo .wx-swiper-dots.wx-swiper-dots-horizontal{
  margin-bottom: 0rpx;
}
.lunbo .wx-swiper-dot{
 width:50rpx;/*点的长*/
 display: inline-flex;
 height: 10rpx; /*点的高*/
 margin-left: 5rpx;  /*两个点的距离*/
 justify-content:space-between;
}
.lunbo .wx-swiper-dot::before{
 content: '';
 flex-grow: 1; 
 background : gray; /*点的未选中颜色*/
 border-radius: 4rpx;
}
.lunbo .wx-swiper-dot-active::before{
 background:#33cc99;   /*点的选中颜色*/
 border-radius: 10rpx;
}
 
.lunbo .wx-swiper-dot.wx-swiper-dot{ /*点的未选中样式*/
  width: 10rpx;
}
.lunbo .wx-swiper-dot.wx-swiper-dot-active{/*点的选中样式*/
  width: 40rpx;
  height: 10rpx;
}
