.box-container .box-left {
  display: inline-block;
  width: 48%;
  margin: 5rpx 10rpx 5rpx 10rpx;
  vertical-align: top;
}

.box-container .box-right {
  display: inline-block;
  width: 48%;
  margin: 5rpx 10rpx 5rpx 0;
  vertical-align: top;
}

.box-container .item-container {
  background-color: white;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
}

.box-container .item-container .item {
  padding: 10rpx 10rpx 10rpx 10rpx;
}

.box-container image {
  width: 335rpx;
  border-radius: 6rpx;
}

.box-container .title {
  text-align: left;
  font-size: 28rpx;
  font-weight: bold;
}

.box-container .description {
  text-align: left;
  font-size: 20rpx;
  color: #6c757d;
  margin-top: 6rpx;
}

.box-container .price-container {
  text-align: left;
  margin-top: 10rpx;
  color: #f32b2f;
  font-weight: bold;
}
.box-container .price-icon {
  display: inline-block;
  font-size: 24rpx;
}
.box-container .price {
  display: inline-block;
  font-size: 34rpx;
}
.box-container .price-per {
  display: inline-block;
  font-size: 24rpx;
  color: #6c757d;
  font-weight: normal;
}