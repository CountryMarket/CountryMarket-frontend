<!--pages/home/home.wxml-->
<view class="home">
  <!-- 顶部搜索框 -->
  <search-bar placeholder="查找你想要的商品" bind:handleSearch="handleSearch"></search-bar>
  
  <!-- 滑动框 -->
  <scroll-view scroll-y="true" 
               style="height:{{ winHeight - 90 }}px" 
               enhanced="true" 
               show-scrollbar="false" 
               fast-deceleration="true"
               refresher-enabled="true" >

    <!-- 滑动广告栏 -->
    <swiper class="swiper-container" indicator-dots autoplay="true" interval="4000" circular="true">
      <swiper-item>
        <view class="item">A</view>
      </swiper-item>
      <swiper-item>
        <view class="item">B</view>
      </swiper-item>
      <swiper-item>
        <view class="item">C</view>
      </swiper-item>
    </swiper>

    <!-- 分类栏 -->
    <category-list></category-list>

    <!-- 商品栏 -->
    <view class="box-container">
      <!--<view wx:for="{{ [0, 1, 2, 3, 4, 5, 6] }}" class="item-wrapper">
      <view class="item">
        <view class="content">
          <image src="https://blog.lyffly.com/static/images/avatar.jpg" />
        </view>
      </view>
      </view>-->
      <view class="box-left">
        <view wx:for="{{ [0, 2, 4, 6] }}" class="item-container">
          <view class="item">
            <image src="https://blog.lyffly.com/static/images/avatar.jpg" style="height: 330rpx;"></image>
            <view class="title">新鲜猪小排（肉质弹嫩）约400g</view>
            <view class="description">新鲜的猪小排，400g仅20元，新猪新鲜切制。</view>
            <view class="price-container">
              <view class="price-icon">￥</view>
              <view class="price">29.5</view>
              <view class="price-per">/份</view>
            </view>
          </view>
        </view>
      </view>
      <view class="box-right">
        <view wx:for="{{ [1, 3, 5, 7] }}" class="item-container">
          <view class="item">
            <image src="https://blog.lyffly.com/static/images/avatar.jpg" style="height: 350rpx;"></image>
            <view class="title">过期猪小排100g</view>
            <view class="description">过期的猪小排。</view>
            <view class="price-container">
              <view class="price-icon">￥</view>
              <view class="price">233.5</view>
              <view class="price-per">/份</view>
            </view>
          </view>
        </view>
      </view>
    </view>

  </scroll-view>
</view>
