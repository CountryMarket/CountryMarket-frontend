.swiper-tab {  
  width: 100%;  
  border-top: 2rpx solid #363636;  
  text-align: center;  
}  
.swiper-tab-list {  
  display: inline-block;  
  width: 25%;  
  color: #363636;  
}  
.swiper-tab-list .tab-text {  
  font-size: 22rpx;   
  margin-top: -7rpx;
}  
.swiper-tab-list fa {  
  font-size: 1.5em;  
}  
.on { 
  color: #007e4e;  
  border-top: 5rpx solid #007e4e;
}  
.swiper-box { 
  display: block; 
  height: 100%; 
  width: 100%; 
  overflow: hidden; 
}  
.swiper-box view {  
  text-align: center;  
}  

