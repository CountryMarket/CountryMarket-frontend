/* pages/goods/goods.wxss */

.swiper-container {
  height: 300rpx;
}
.swiper-container .item {
  height: 100%;
  background-color: #c2c2c2;
}


/* 固定栏目 */
.goods-bottom{
  position: fixed;
  bottom: 0;
  background: #fff;
  display: flex;
  width: 100%;
  height: 100rpx;
  line-height: 80rpx;
  align-items: center;
}
.add_button {
  color: white;
  font-size: 15px;
  background-color: #33CC99;
}
.keep_image {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: -35rpx;
}
.keep {
  padding-left: 20rpx;
  display: block;
}

/* 商品信息 */
.good_block {
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 710rpx;
  height: 300rpx;
  border: 1rpx solid red;
  border-radius: 8rpx;
  box-shadow: 1rpx 1rpx 15rpx red;

}