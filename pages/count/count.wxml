  <view>
      <view style="margin-left: 20rpx; margin-top: 20rpx;color: #33cc99; font-weight: 600;">产品热度分析:</view>
      <image src="https://7961-yangqu-2gonq20w81d87cfb-1312512244.tcb.qcloud.la/assert/image/picture/20220602-3.png" style="width: 100%; margin-top: 20rpx;" mode="widthFix"></image>
  </view>

  <view>
    <view></view>
