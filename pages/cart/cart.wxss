/* pages/cart/cart.wxss */
/* 地址信息 */
.address {
  padding: 20rpx;
  margin-top: 15rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  border: 1rpx solid #efefef;
  border-radius: 8rpx;
  box-shadow: 22rpx 2rpx 30rpx #efefef;
  font-size: 28rx;
  text-shadow: 2rpx 2rpx 2rpx #ededed;
  background-color: white;
}
.address_title {
  margin-bottom: 10rpx;
  display: flex;
  font-size: 30rpx;
  font-weight: 800;
}
.address image {
  padding: 5rpx;
  height: 28rpx;
  width: 28rpx;
}
.address_block1 {
  margin-bottom: 10rpx;
  display: flex;
}
.address_block2 {
  display: flex;
}
.address_people {
  width: 360rpx;
}
/*  */
.cart-title {
    height: 80rpx;
    display: flex;
    align-items: center;
    font-size: 28rpx;
    font-weight: 800;
    padding-left: 10rpx;
    border-bottom: 2rpx solid #efefef;
}
/* 购物车小图标+文本*/
.gwc-icon {
  margin-left: 15rpx;
  width: 40rpx;
  height: 40rpx;
}
.gwc-text {
    margin-left: 20rpx;
    font-size: 40rpx;
}
/* 购物车块样式 */
.shop-item {
    display: flex;
    padding: 15rpx;
    border: 1rpx solid #efefef;
    border-radius: 8rpx;
    box-shadow: 1rpx 1rpx 15rpx #efefef;
    background-color: white;
    margin-bottom: 5rpx;
}
.shop-title {
  display: flex;
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
  font-weight: 800;
  height: 45rpx;
  width: 475rpx;
}
.shop-description {
  display: flex;
  flex-direction: column;
  margin-top: 5rpx;
  font-size: 12px;
  height: 117rpx;
  width: 450rpx;
}
.shop-image image{
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin-right: 15rpx;
}
.circle icon {
  height: 50rpx;
  margin-top: 75rpx;
  margin-bottom: 75rpx;
  margin-right: 15rpx
}
/* 价格 */
.price-container {
  text-align: left;
  color: #f32b2f;
  font-weight: bold;
  display: flex;
  margin-bottom: 0px;
  width: 230rpx;
}
.price-icon {
  display: inline-block;
  font-size: 24rpx;
  margin-top: 10rpx;
}
.price {
  display: inline-block;
  font-size: 34rpx;
}
.price_and_input {
  display: flex;
}

.number_control {
  border-color: red;
  border-top: 1rpx red;
  border: 1rpx solid #efefef;
  width: 200rpx;
  height: 40rpx;
  display: flex;
  border-radius: 8rpx;
}
.number_input {
  font-size: 14px;
  text-align: center;
  height: 40rpx;
  width: 80rpx;
  display: inline-block;
  margin: 0 20rpx;
  z-index: 0;
}
.number_input_text {
  text-align: center;
  font-size: 40rpx;
  color: #33CC99;
}
.change_tab {
  width: 40rpx;
  height: 40rpx;
  background-color: #33CC99;
  font-weight: 800;
  color: white;
  display: inline-block;
  border-radius: 8rpx; 
}

.change_tab .text {
  font-size: 40rpx;
  margin-top: -8rpx;
  text-align: center;
}

/*  */
.delete {
  color: red;
}
/* 图片样式 */


.head {
    font-weight: bold;
}

/* 固定合计部分 */

.myCart-bottom{
  position: fixed;
  bottom: 0;
  background: #fff;
  display: flex;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  align-items: center;
}
.selectedAll{
  flex: 1;
  display: flex;
  align-items: center;
  vertical-align: middle;
  padding-left: 10rpx;
}
.selectedAll icon{
  width: 46rpx;
  height: 46rpx;
  margin-right: 6rpx;
}
.heji-1 {
  padding-right: 20rpx;
  font-size: 24rpx;
  display: flex;
}
.heji-2 {
  font-size: 36rpx;
  font-weight: 700;
  color: red;
}
.jiesuan{
  background: #33CC99;
  color: #fff;
  padding-right: 10rpx;
  padding-left: 10rpx;
  display: flex;
  font-weight: 600;
  justify-content: center;
  align-items: center;
}
.liu {
  height: 85rpx;
}

