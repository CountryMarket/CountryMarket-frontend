/* components/searchBar.wxss */
.searchbar {
  height: 60rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 15rpx;
  display: flex;
  background: #33CC99;
  position: fixed;
  z-index: 1;
  width: 690rpx;
}
.content {
  height: 60rpx;
  padding: 0 18rpx;
  margin-top: 0px;
  background: rgba(255,255,255,1);
  border-radius: 30rpx;
  border: 2rpx solid rgba(220,222,226,1);
  flex: 1;
  display: flex;
  align-items: center;
}
.search-icon {
  width: 34rpx;
  height: 34rpx;
  margin-bottom: 20rpx;
}
.input-box {
  flex: 1;
  margin: 0 20rpx;
  text-align: left;
  font-size: 25rpx;
}
.cancel-btn {
  margin-left: 24rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
}